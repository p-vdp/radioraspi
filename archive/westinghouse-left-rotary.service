[Unit]
Description=westinghouse-left-rotary
Wants=dynamicswap.service

StartLimitBurst=2
StartLimitIntervalSec=5

[Service]
ExecStart=python3 /home/rpi/westinghouse/westinghouse-left-rotary.py
Restart=on-failure

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=westinghouse-left-rotary
User=root
Group=root

[Install]
WantedBy=multi-user.target
